{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build your_program",
            "type": "shell",
            "command": "gcc",
            "args": [
                "main.c",
                "-o",
                "main",  // Change this line to use "your_program" instead of "main.c"
                "-lraylib",
                "-lm",
                "-lpthread",
                "-ldl",
                "-lrt",
                "-lX11"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
